
#!/usr/bin/env python3

import boto3

CYAN='\033[1;36m'
NO_COLOR='\033[0m'
LABEL="dbb-scan"
print(f"${CYAN}== ${LABEL}${NO_COLOR}\n")

attrs= {
  'endpoint_url': 'http://localhost:8000'
}
ddb = boto3.resource('dynamodb',**attrs)
table_name = 'cruddur-messages'

table = ddb.Table(table_name)
response = table.scan()

items = response['Items']
for item in items:
  print(item)